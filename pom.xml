                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.2.0</version>

                <configuration>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>

                    <archive>
                        <manifest>
                            <mainClass>rev.gretty.homerest.HttpServerStartGretty</mainClass>
                        </manifest>
                    </archive>

                </configuration>

